    </div>



    <div class="form-horizontal">
        <div id="tarife">
            @Html.EditorFor(model => model.Tarif)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="@Url.Action("AddTarif", "Parkhaus", new { parkhausId = Model.Id})" class="btn btn-default">
