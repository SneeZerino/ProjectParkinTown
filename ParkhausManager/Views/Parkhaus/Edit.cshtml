@model ParkhausManager.Parkhaus

@{
    ViewBag.Title = "Edit";
}

<h2>Parkhaus bearbeiten</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
