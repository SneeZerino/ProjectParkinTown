@model IEnumerable<ParkhausManager.Parkhaus>

@{
    ViewBag.Title = "Parkhäuser";
}

<h2>Parkhäuser</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ort)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ort)
        </td>
        <td>
            @Html.ActionLink("Übersicht", "Details", new { id = item.Id }) |
            @Html.ActionLink("Bearbeiten", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Neues Parkhaus hinzufügen", "Create")
</p>